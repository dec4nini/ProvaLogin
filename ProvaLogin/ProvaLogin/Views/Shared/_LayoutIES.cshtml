@inject Microsoft.AspNetCore.Identity.SignInManager<ProvaLogin.Models.Infra.UsuarioDaAplicacao> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<ProvaLogin.Models.Infra.UsuarioDaAplicacao> UserManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar fixed-top navbar-light" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#">
            
        </a>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">&nbsp;</div>
            <div class="col-12">&nbsp;</div>
            <div class="col-12">&nbsp;</div>
            <div class="col-12">&nbsp;</div>
        </div>

        <div class="row" style="text-align:right;">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                @if (SignInManager.IsSignedIn(User))
                {
                    <div>
                        Olá @UserManager.GetUserName(User), bem-vindo |
                        @Html.ActionLink("Sair", "Sair", "Infra", new { area = "" })
                    </div>
                }
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <nav class="nav flex-column">
                    

                </nav>
            </div>
            <div class="col-10">
                <div class="row">
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar fixed-bottom" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#">Sistema</a>
    </nav>
    @RenderSection("Scripts", required: false)
</body>
</html>
